<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center">
    <LinearLayout
      android:layout_width="280dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tvReferencia"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Referencia"
        android:textSize="20dp" />
      <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20dp"
        android:text="Fecha" />
      <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
            <TextView
              android:id="@+id/tvLatitudTitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:gravity="center"
              android:textSize="15dp"
              android:text="LatitudTitle" />
          <TextView
              android:id="@+id/tvLatitud"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2"
            android:textSize="15dp"
              android:gravity="center"
              android:text="Latitud" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:translationX="20dp">
          <TextView
            android:id="@+id/tvLongitudTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15dp"
            android:gravity="center"
            android:text="LongitudTitle" />
          <TextView
            android:id="@+id/tvLongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Longitud" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:translationX="35dp">
          <TextView
            android:id="@+id/tvProfundidadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15dp"
            android:gravity="center"
            android:text="ProfundidadTitle" />
          <TextView
            android:id="@+id/tvProfundidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Profundidad" />
        </LinearLayout>
      </LinearLayout>
      <TextView
        android:id="@+id/tvRecurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="TextView" />

    </LinearLayout>
    <LinearLayout
      android:layout_width="150dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tvMagnitud"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:text="10.0"
        android:gravity="center"
        android:textSize="60dp" />
      <TextView
        android:id="@+id/tvEscala"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:text="Mb"
        android:gravity="center"
        android:textSize="25dp" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>